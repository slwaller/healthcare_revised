%header#myCarousel.carousel.slide
  / Indicators
  %ol.carousel-indicators
    %li{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li.active{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  / Wrapper for slides
  .carousel-inner
    .item
      .fill{:style => "background-image:url('http://blog.lenycom.com/wp-content/gallery/wallpaper2/1091154011.jpg');"}
      .carousel-caption
        %h2 Appalachian Healthcare
    .item.active
      .fill{:style => "background-image:url('http://patrinos.com/img/1900x1080_pittsburgh_skyline_night.jpg');"}
      .carousel-caption
        %h2 Family Oriented
    .item
      .fill{:style => "background-image:url('http://images.huffingtonpost.com/2013-10-25-Doctor.jpg');"}
      .carousel-caption
        %h2 Dedicated To You
  / Controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
    %span.icon-prev
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
    %span.icon-next
